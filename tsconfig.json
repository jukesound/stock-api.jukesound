{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["dom", "es2016"],
    "rootDir": "./",
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["/*"],

      "@database/*": ["database/*"],

      "@config/*": ["config/*"],

      "@src/*": ["src/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
